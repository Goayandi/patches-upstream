From 4447582c510d8d57655a0fd45c26b7242643948b Mon Sep 17 00:00:00 2001
From: Howard Chen <howard.chen@linaro.org>
Date: Tue, 14 Apr 2015 11:56:06 +0800
Subject: [PATCH 2/4] drivers: cpuidle: Refine ARM64_CPUIDLE options to support
 multiple drivers

This patch adds a selection to the CPU_IDLE_MULTIPLE_DRIVERS for
ARM64_CPUIDLE.

Signed-off-by: Howard Chen <howard.chen@linaro.org>
---
 drivers/cpuidle/Kconfig.arm64 | 1 +
 1 file changed, 1 insertion(+)

diff --git a/drivers/cpuidle/Kconfig.arm64 b/drivers/cpuidle/Kconfig.arm64
index 6effb36..9af601a 100644
--- a/drivers/cpuidle/Kconfig.arm64
+++ b/drivers/cpuidle/Kconfig.arm64
@@ -5,6 +5,7 @@
 config ARM64_CPUIDLE
 	bool "Generic ARM64 CPU idle Driver"
 	select DT_IDLE_STATES
+	select CPU_IDLE_MULTIPLE_DRIVERS
 	help
 	  Select this to enable generic cpuidle driver for ARM64.
 	  It provides a generic idle driver whose idle states are configured
